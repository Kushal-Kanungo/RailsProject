<h1 class="page-heading"> <i class="bi bi-journals"></i> Articles</h1>
<div class="row">
  <% @articles.each do |article| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class=" article-list-item ">
        <div> <%= link_to article.title , article %> </div>
        <span> <%= article.created_at.strftime("%b %d, %y")%> </span>
        <p class="mb-4 mt-2" > <%= article.body%> </p>
      </div>
    </div>
  <% end %>
  <%= render 'add_btn' %>
</div>
